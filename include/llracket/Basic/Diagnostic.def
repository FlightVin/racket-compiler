#ifndef DIAG
#define DIAG(ID, Level, Msg)
#endif

DIAG(err_unknown, Error, "Unknown error")
DIAG(err_unknown_token, Error, "Unknown token '{0}'")

DIAG(err_unexpected_token, Error, "Unexpected token '{0}', expected {1}")
DIAG(err_type_mismatch, Error, "Type mismatch: expected {0} but got {1}{2}")
DIAG(err_expected_type, Error, "Expected type {0} but got {1}{2}")
DIAG(err_if_branch_mismatch, Error, "Type mismatch in 'if' branches: '{0}' vs '{1}'")
DIAG(err_undefined_variable, Error, "Undefined variable '{0}'")
DIAG(err_invalid_operands, Error, "Invalid operands for '{0}': expected {1}")
DIAG(err_wrong_operand_count, Error, "Invalid number of operands for '{0}'")
DIAG(err_empty_program, Error, "Program is empty")
DIAG(err_empty_begin, Error, "Begin must contain at least one expression")
DIAG(err_internal_compiler, Error, "Internal compiler error: {0}")
DIAG(err_set_undefined, Error, "Cannot set! undefined variable '{0}'")
DIAG(err_cannot_infer_type, Error, "Cannot infer type for '{0}'")

#undef DIAG